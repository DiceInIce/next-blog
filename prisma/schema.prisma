generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Здесь будут ваши модели данных
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post { 
  id Int @id @default(autoincrement())
  title String
  content String
  createdAt DateTime @default(now())
  authorId Int
  author User @relation(fields: [authorId], references: [id])
}